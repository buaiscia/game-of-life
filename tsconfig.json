{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "allowJs": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib/",
    "rootDir": ".",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
